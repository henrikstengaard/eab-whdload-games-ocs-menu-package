; HstWB Menu Item Run script for AGS2
; -----------------------------------
;RunFile=A-Games:G/Goldrunner2&SceneryDisks/Goldrunner2&SceneryDisks.Slave

; Favourites Mode
IF EXISTS ENV:favouritesmode
  execute S:AGS2Favourites "G" "Goldrunner II SceneryDisk"
  IF $favouritesmode EQ "add"
    SKIP end
  ENDIF
  IF $favouritesmode EQ "remove"
    SKIP end
  ENDIF
ENDIF

; Start AGS2 Run Pre Script, if it exists
IF EXISTS S:AGS2RunPre
  execute S:AGS2RunPre
ENDIF

; Whdload
cd "A-Games:G/Goldrunner2&SceneryDisks/"
IF EXISTS ENV:whdloadargs
  whdload "Goldrunner2&SceneryDisks.Slave" $whdloadargs
ELSE
  whdload "Goldrunner2&SceneryDisks.Slave"
ENDIF

; Start AGS2 Run Post Script, if it exists
IF EXISTS S:AGS2RunPost
  execute S:AGS2RunPost
ENDIF

; End
LAB end
