cd "A-Games:D/DenverJeFaisDesCouleursFr/"
IF EXISTS ENV:whdloadargs
  whdload "DenverJeFaisDesCouleursFr.Slave" $whdloadargs
ELSE
  whdload "DenverJeFaisDesCouleursFr.Slave"
ENDIF

; Start AGS2 Run Post Script, if it exists
