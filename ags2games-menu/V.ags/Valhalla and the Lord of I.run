; HstWB Menu Item Run script for AGS2
; -----------------------------------
;RunFile=A-Games:V/ValhallaLordOfInfinity/ValhallaLordOfInfinity.Slave

; Favourites Mode
IF EXISTS ENV:favouritesmode
  execute S:AGS2Favourites "V" "Valhalla and the Lord of I"
  IF $favouritesmode EQ "add"
    SKIP end
  ENDIF
  IF $favouritesmode EQ "remove"
    SKIP end
  ENDIF
ENDIF

; Start AGS2 Run Pre Script, if it exists
IF EXISTS S:AGS2RunPre
  execute S:AGS2RunPre
ENDIF

; Whdload
cd "A-Games:V/ValhallaLordOfInfinity/"
IF EXISTS ENV:whdloadargs
  whdload "ValhallaLordOfInfinity.Slave" $whdloadargs
ELSE
  whdload "ValhallaLordOfInfinity.Slave"
ENDIF

; Start AGS2 Run Post Script, if it exists
IF EXISTS S:AGS2RunPost
  execute S:AGS2RunPost
ENDIF

; End
LAB end
