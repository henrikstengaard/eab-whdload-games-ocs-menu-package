; HstWB Menu Item Run script for AGS2
; -----------------------------------
;RunFile=A-Games:R/RevengeOfMutantCamels2/RevengeOfMutantCamels2.Slave

; Favourites Mode
IF EXISTS ENV:ags2favouritesmode
  execute S:AGS2Favourites "R" "Revenge of the Mutant C V2"
  IF $ags2favouritesmode EQ "add"
    SKIP end
  ENDIF
  IF $ags2favouritesmode EQ "remove"
    SKIP end
  ENDIF
ENDIF

; Start AGS2 Run Pre Script, if it exists
IF EXISTS S:AGS2RunPre
  execute S:AGS2RunPre
ENDIF

; Whdload
cd "A-Games:R/RevengeOfMutantCamels2/"
IF EXISTS ENV:whdloadargs
  whdload "RevengeOfMutantCamels2.Slave" $whdloadargs
ELSE
  whdload "RevengeOfMutantCamels2.Slave"
ENDIF

; Start AGS2 Run Post Script, if it exists
IF EXISTS S:AGS2RunPost
  execute S:AGS2RunPost
ENDIF

; End
LAB end
