; HstWB Menu Item Run script for AGS2
; -----------------------------------
;RunFile=A-Games:D/DrDoomsRevenge1Disk/DrDoomsRevenge1Disk.Slave

; Favourites Mode
IF EXISTS ENV:favouritesmode
  execute S:AGS2Favourites "D" "Dr. Dooms Revenge 1Disk"
  IF $favouritesmode EQ "add"
    SKIP end
  ENDIF
  IF $favouritesmode EQ "remove"
    SKIP end
  ENDIF
ENDIF

; Start AGS2 Run Pre Script, if it exists
IF EXISTS S:AGS2RunPre
  execute S:AGS2RunPre
ENDIF

; Whdload
cd "A-Games:D/DrDoomsRevenge1Disk/"
IF EXISTS ENV:whdloadargs
  whdload "DrDoomsRevenge1Disk.Slave" $whdloadargs
ELSE
  whdload "DrDoomsRevenge1Disk.Slave"
ENDIF

; Start AGS2 Run Post Script, if it exists
IF EXISTS S:AGS2RunPost
  execute S:AGS2RunPost
ENDIF

; End
LAB end
