;RunFile=A-Games:W/WITUSAIsCarmenSandiego/WITUSAIsCarmenSandiego.slave

; Favourites Mode
IF EXISTS ENV:favouritesmode
  execute S:AGS2Favourites "W" "Where in the USA is Carmen"
  IF $favouritesmode EQ "add"
    SKIP end
  ENDIF
  IF $favouritesmode EQ "remove"
    SKIP end
  ENDIF
ENDIF

; Start AGS2 Run Pre Script, if it exists
IF EXISTS S:AGS2RunPre
  execute S:AGS2RunPre
ENDIF

; Whdload
cd "A-Games:W/WITUSAIsCarmenSandiego/"
IF EXISTS ENV:whdloadargs
  whdload "WITUSAIsCarmenSandiego.slave" $whdloadargs
ELSE
  whdload "WITUSAIsCarmenSandiego.slave"
ENDIF

; Start AGS2 Run Post Script, if it exists
IF EXISTS S:AGS2RunPost
  execute S:AGS2RunPost
ENDIF

; End
LAB end
