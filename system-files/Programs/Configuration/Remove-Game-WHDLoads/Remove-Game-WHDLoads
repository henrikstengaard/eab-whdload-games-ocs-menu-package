; Show remove whdloads menu
set removewhdloadsmenu ""
set removewhdloadsmenu "`C:RequestList TITLE="Remove Game WHDLoads" LISTFILE="T:removewhdloadsmenu" WIDTH=320 LINES=20`"
delete >NIL: T:removewhdloadsmenu

; Language 'CV' option
IF "$removewhdloadsmenu" eq "1"
  IF EXISTS "T:a5c8c3544bc49ebacde4ffe04bf34de0"
    Delete >NIL: "T:a5c8c3544bc49ebacde4ffe04bf34de0"
  ELSE
    echo "" NOLINE >"T:a5c8c3544bc49ebacde4ffe04bf34de0"
  ENDIF
ENDIF

; Language 'CZ' option
IF "$removewhdloadsmenu" eq "2"
  IF EXISTS "T:928568b84963ceb76aaaa2cae9afdbfa"
    Delete >NIL: "T:928568b84963ceb76aaaa2cae9afdbfa"
  ELSE
    echo "" NOLINE >"T:928568b84963ceb76aaaa2cae9afdbfa"
  ENDIF
ENDIF

; Language 'DE' option
