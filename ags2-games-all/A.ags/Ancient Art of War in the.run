; AGS2 run script
; ---------------
;RunFile=A-Games:A/AncientArtOfWar/AncientArtOfWar.slave

; Favourites Mode
IF EXISTS ENV:ags2favouritesmode
  execute S:AGS2Favourites "A" "Ancient Art of War in the"
  IF $ags2favouritesmode EQ "add"
    SKIP end
  ENDIF
  IF $ags2favouritesmode EQ "remove"
    SKIP end
  ENDIF
ENDIF

; Start AGS2 Run Pre Script, if it exists
IF EXISTS S:AGS2RunPre
  execute S:AGS2RunPre
ENDIF

; Run WHDLoad
cd "A-Games:A/AncientArtOfWar/"
IF EXISTS ENV:whdloadargs
  whdload "AncientArtOfWar.slave" $whdloadargs
ELSE
  whdload "AncientArtOfWar.slave"
ENDIF

; Start AGS2 Run Post Script, if it exists
IF EXISTS S:AGS2RunPost
  execute S:AGS2RunPost
ENDIF

; End
LAB end
